@model IEnumerable<VideoRental.ViewModels.MovieIndexViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div>
    <br />
    <br />
</div>
@if (!Model.Any())
{
    <p>Currently we don't have movies.</p>
}
else
{
<table id="moviesList" class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Genre
            </th>
        </tr>
    </thead>
    <tbody >
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @movie.Name
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    </tbody>
</table>
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#moviesList").DataTable();
        });
    </script>
}
